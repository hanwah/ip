<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="walle.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="600.0" prefWidth="400.0"
                    AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="50.0">
            <content>
                <VBox fx:id="dialogContainer" spacing="10.0" prefWidth="380.0" />
            </content>
        </ScrollPane>

        <TextField fx:id="userInput" promptText="Enter command..."
                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="80.0"
                   AnchorPane.bottomAnchor="0.0" prefHeight="50.0" />

        <Button text="Send" onAction="#handleUserInput"
                AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                prefWidth="80.0" prefHeight="50.0" />
    </children>
</AnchorPane>
